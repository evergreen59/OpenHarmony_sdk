import display from '@ohos.display'
import router from '@ohos.router';
import { ShowInfo } from '../common/ShowInfo'
import Logger from '../common/Logger'

const TAG: string = '[ScreenDetector]'

let scrInfo:display.Display = router.getParams()['scrInfo'];

@Entry
@Component
struct ScreenInfo {
  aboutToAppear() {
    Logger.info(TAG, `ScreenInfo = ${JSON.stringify(scrInfo)}`)
  }
  /**
   * In low-code mode, do not add anything to the build function, as it will be
   * overwritten by the content generated by the .visual file in the build phase.
   */
  build() {
    Column() {
      Row() {
        Text($r('app.string.entry_ScreenInfo'))
          .fontSize(20)
          .fontColor(Color.White)
          .textAlign(TextAlign.Center)
      }
      .height('6%')
      .width('100%')
      .padding({ left: 15 })
      .backgroundColor('#0D9FFB')
      .constraintSize({ minHeight: 50 })

      ShowInfo({
        infoDetail: scrInfo
      })
    }
    .width('100%')
    .height('100%')
    .backgroundColor('#F1F1F1')
  }
}