import("//base/account/os_account/os_account.gni")
import("//build/test.gni")

module_output_path = "os_account/frameworks/os_account"
config("os_account_core_config_unittest") {
  visibility = [ ":*" ]

  include_dirs = [ "//third_party/googletest/googlemock/include" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  defines = [
    "ACCOUNT_LOG_TAG = \"OsAccountUTestFwk\"",
    "LOG_DOMAIN = 0xD001B00",
  ]
}
ohos_unittest("os_account_test") {
  module_out_path = module_output_path

  sources = [ "os_account_test.cpp" ]

  configs = [ ":os_account_core_config_unittest" ]

  deps = [
    "${common_path}:libaccount_common",
    "${innerkits_native_path}:libaccountkits",
    "${os_account_core_path}:os_account_core",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
}

ohos_unittest("os_account_mock_test") {
  module_out_path = module_output_path

  sources = [
    "//base/account/os_account/services/accountmgr/test/mock/src/mock_service_registry.cpp",
    "os_account_mock_test.cpp",
  ]

  configs = [ ":os_account_core_config_unittest" ]

  deps = [
    "${os_account_core_path}:os_account_core",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "ipc:ipc_core",
  ]
}
group("unittest") {
  testonly = true

  deps = [
    ":os_account_mock_test",
    ":os_account_test",
  ]
}
