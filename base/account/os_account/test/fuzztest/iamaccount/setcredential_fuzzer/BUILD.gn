import("//base/account/os_account/os_account.gni")

#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
module_output_path = "os_account/iamaccount"

##############################fuzztest##########################################
ohos_fuzztest("SetCredentialFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file =
      "//base/account/os_account/test/fuzztest/iamaccount/setcredential_fuzzer"
  include_dirs = [ "${account_iam_interfaces_native_path}/include" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  cflags_cc = [
    "-Wdate-time",
    "-Wformat=2",
    "-Wfloat-equal",
    "-Wshadow",
  ]

  if (has_pin_auth_part) {
    cflags_cc += [ "-DHAS_PIN_AUTH_PART" ]
  }

  if (has_user_auth_part) {
    cflags_cc += [ "-DHAS_USER_AUTH_PART" ]
  }

  sources = [ "setcredential_fuzzer.cpp" ]

  deps = [
    "//base/account/os_account/frameworks/account_iam:account_iam_innerkits",
    "//base/account/os_account/frameworks/common:libaccount_common",
  ]

  external_deps = [
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]

  defines = [
    "ACCOUNT_LOG_TAG = \"SetCredentialFuzzTest\"",
    "LOG_DOMAIN = 0xD001B00",
  ]
}
