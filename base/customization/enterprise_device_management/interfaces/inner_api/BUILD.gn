import("//base/customization/enterprise_device_management/edm.gni")
import("//build/ohos.gni")

SRC_PATH = "$EDM_INNERKITS_PATH/"

config("edmservice_kits_config") {
  include_dirs = [
    "common/include",
    "datetime_manager/include",
    "$SUBSYSTEM_DIR/common/native/include",
  ]
}

ohos_shared_library("edmservice_kits") {
  public_configs = [ ":edmservice_kits_config" ]

  sources = [
    "$SRC_PATH/common/src/ent_info.cpp",
    "$SRC_PATH/common/src/enterprise_device_mgr_proxy.cpp",
    "$SRC_PATH/datetime_manager/src/datetime_manager_proxy.cpp",
    "$SUBSYSTEM_DIR/common/native/src/edm_sys_manager.cpp",
  ]

  configs = [ "//base/customization/enterprise_device_management/common/config:coverage_flags" ]

  external_deps = [
    "ability_base:want",
    "c_utils:utils",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  subsystem_name = "customization"
  part_name = "enterprise_device_management"
}
