import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  shared_library("libfaultloggerd") {
    visibility = [ "*:*" ]

    include_dirs = [
      ".",
      "./include",
      "//commonlibrary/c_utils/base/include",
      "//base/startup/init/interfaces/innerkits/include",
      "$faultloggerd_path/tools/process_dump/",
      "$faultloggerd_path/common",
      "$faultloggerd_path/common/dfxlog",
      "$hilog_lite_include_path",
    ]

    sources = [
      "//base/hiviewdfx/faultloggerd/tools/process_dump/dfx_logger.cpp",
      "faultloggerd_client.cpp",
      "faultloggerd_socket.cpp",
    ]

    deps = [
      "$faultloggerd_path/common/dfxlog:static_common_log",
      "//base/hiviewdfx/hilog_lite/frameworks/featured:hilog_shared",
      "//base/startup/init/interfaces/innerkits:libbegetutil",
    ]
  }
} else {
  config("faultloggerd_client_config") {
    visibility = [ "*:*" ]

    include_dirs = [
      "include",
      "//commonlibrary/c_utils/base/include",
      "//base/startup/init/interfaces/innerkits/include",
      "$faultloggerd_path/common",
      "$faultloggerd_path/common/dfxlog",
      "$faultloggerd_path/tools/process_dump/",
    ]
  }

  ohos_shared_library("libfaultloggerd") {
    public_configs = [ ":faultloggerd_client_config" ]

    deps = [ "$faultloggerd_path/common/dfxlog:static_common_log" ]
    sources = [
      "//base/hiviewdfx/faultloggerd/tools/process_dump/dfx_logger.cpp",
      "faultloggerd_client.cpp",
      "faultloggerd_socket.cpp",
    ]

    external_deps = [
      "c_utils:utils",
      "hilog_native:libhilog",
      "init:libbegetutil",
    ]
    install_images = [
      "system",
      "updater",
    ]
    part_name = "faultloggerd"
    subsystem_name = "hiviewdfx"
  }
}
