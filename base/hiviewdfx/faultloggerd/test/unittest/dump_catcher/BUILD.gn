import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")

  if (ohos_build_type == "debug") {
    unittest("test_dumpcatcher") {
      output_extension = "bin"

      output_dir = "$root_out_dir/test/unittest/faultloggerd"

      sources = [ "dumpcatcher_interfaces_test.cpp" ]

      include_dirs = [
        "include/",
        "//commonlibrary/c_utils/base/include",
        "$faultloggerd_path/common",
        "$faultloggerd_path/interfaces/innerkits/dump_catcher/include",
        "$faultloggerd_path/tools/process_dump",
        "$faultloggerd_path/utils",
        "$hilog_lite_include_path",
      ]

      deps = [
        "$faultloggerd_path/interfaces/innerkits/dump_catcher:lib_dfx_dump_catcher",
        "//base/hiviewdfx/hilog_lite/frameworks/featured:hilog_shared",
      ]
    }
  }

  group("unittest") {
    deps = [ ":test_dumpcatcher" ]
  }
} else {
  import("//build/config/features.gni")
  import("//build/test.gni")

  module_output_path = "faultloggerd/dump_catcher"

  ohos_unittest("test_dumpcatcher") {
    module_out_path = module_output_path

    visibility = [ "*:*" ]

    include_dirs = [
      "$faultloggerd_path/common",
      "$faultloggerd_path/interfaces/innerkits/dump_catcher/include",
    ]

    sources = [ "dumpcatcher_interfaces_test.cpp" ]

    deps = [
      "$faultloggerd_path/interfaces/innerkits/dump_catcher:lib_dfx_dump_catcher",
      "//third_party/googletest:gtest_main",
    ]

    external_deps = [
      "c_utils:utils",
      "hilog_native:libhilog",
    ]
  }

  group("unittest") {
    testonly = true
    deps = [ ":test_dumpcatcher" ]
  }
}
