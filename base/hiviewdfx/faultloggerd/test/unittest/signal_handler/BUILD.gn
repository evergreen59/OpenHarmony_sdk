import("//base/hiviewdfx/faultloggerd/faultloggerd.gni")

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")

  group("unittest") {
    deps = []
  }
} else {
  import("//build/config/features.gni")
  import("//build/test.gni")

  ohos_unittest("test_signalhandler") {
    module_out_path = "faultloggerd/signal_handler"

    visibility = [ "*:*" ]

    include_dirs = [
      "//commonlibrary/c_utils/base/include",
      "$faultloggerd_path/common",
    ]

    sources = [ "signal_handler_test.cpp" ]

    deps = [
      "$faultloggerd_path/common/util:dfx_cutil",
      "$faultloggerd_path/interfaces/innerkits/signal_handler:dfx_local_handler",
      "//third_party/googletest:gtest_main",
    ]

    external_deps = [ "c_utils:utils" ]
  }

  group("unittest") {
    testonly = true
    deps = [ ":test_signalhandler" ]
  }
}
