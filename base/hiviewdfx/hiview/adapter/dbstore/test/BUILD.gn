import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/test.gni")

config("db_store_adapter_config") {
  visibility = [ ":*" ]

  include_dirs = [
    ".",
    "unittest/common",
  ]

  cflags = [ "-D__UNITTEST__" ]
}

ohos_unittest("DbStoreAdapterUnitTest") {
  module_out_path = "hiview/hiview/adapter"

  configs = [ ":db_store_adapter_config" ]

  sources = [ "unittest/common/sys_adapter_dbstore_test.cpp" ]

  cflags_cc = [ "-DTEST_LOCAL_SRC" ]

  deps = [ "$hiview_adapter/dbstore:db_store_source_static_lib_for_tdd" ]

  external_deps = [
    "init:libbeget_proxy",
    "init:libbegetutil",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}