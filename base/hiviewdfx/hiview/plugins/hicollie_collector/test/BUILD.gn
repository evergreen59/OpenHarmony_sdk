  sources = [ "unittest/common/hicollie_collector_test.cpp" ]

  deps = [
    "$hiview_base:hiviewbase_static_lib_for_tdd",
    "$hiview_core:hiview_core",
    "$hiview_plugin/hicollie_collector:hicollie_collector",
    "//third_party/googletest:gtest_main",
  ]

  resource_config_file = "//base/hiviewdfx/hiview/plugins/hicollie_collector/test/resource/ohos_test.xml"
}
