import("//build/ohos.gni")

ohos_hap("extImf") {
  hap_profile = "entry/src/main/module.json"
  hap_name = "extImf"
  subsystem_name = "inputmethod"
  part_name = "imf"
  final_hap_path = "$root_out_dir/tests/unittest/imf/inputmethod_service/resource/extImfBundle/${hap_name}.hap"
  testonly = true
  deps = [
    ":extImf_ets_assets",
    ":extImf_ets_resources",
  ]
  certificate_profile = "signature/openharmony_sx.p7b"
}

ohos_js_assets("extImf_ets_assets") {
  source_dir = "entry/src/main/ets"
  hap_profile = "entry/src/main/module.json"
}

ohos_app_scope("extImf_app_profile") {
  app_profile = "AppScope/app.json"
  sources = [ "AppScope/resources" ]
}

ohos_resources("extImf_ets_resources") {
  sources = [ "entry/src/main/resources" ]
  deps = [ ":extImf_app_profile" ]
  hap_profile = "entry/src/main/module.json"
}
