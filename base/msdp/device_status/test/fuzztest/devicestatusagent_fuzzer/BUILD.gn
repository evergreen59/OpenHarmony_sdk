import("//base/msdp/device_status/device_status.gni")
import("//build/config/features.gni")
import("//build/test.gni")

module_output_path = "device_status/device_status_native"

deps_ex = [
  "ability_base:base",
  "ability_base:want",
  "bundle_framework:appexecfwk_base",
  "eventhandler:libeventhandler",
  "ipc:ipc_core",
  "hiviewdfx_hilog_native:libhilog",
  "safwk:system_ability_fwk",
  "samgr:samgr_proxy",
  "appspawn:appspawn_socket_client",
  "c_utils:utils",
]

ohos_fuzztest("DeviceStatusAgentFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "//base/msdp/device_status/test/fuzztest/devicestatusagent_fuzzer"

  include_dirs = [
    "./",
    "${device_status_interfaces_path}/innerkits/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "./devicestatusagent_fuzzer.cpp" ]
  deps = [
    "${device_status_frameworks_path}/native/src:deviceagent",
    "${device_status_interfaces_path}/innerkits:devicestatus_client",
  ]

  external_deps = deps_ex
}

group("fuzztest") {
  testonly = true
  deps = []

  deps += [ ":DeviceStatusAgentFuzzTest" ]
}
