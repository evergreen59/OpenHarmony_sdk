import("//base/powermgr/display_manager/displaymgr.gni")
import("//build/test.gni")

module_output_path = "${displaymgr_part_name}/displaymgr"

##############################fuzztest##########################################
ohos_fuzztest("DisplayFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "//base/powermgr/display_manager/test/unittest/common/display_fuzzer"

  include_dirs = [
    "./",
    "${displaymgr_utils_path}:utils_config",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "./display_fuzzer.cpp" ]
  deps = [ "${displaymgr_innerkits}:displaymgr" ]

  external_deps = [
    "c_utils:utils",
    "ipc:ipc_core",
    "power_manager:powermgr_client",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []

  deps += [
    # deps file
    ":DisplayFuzzTest",
  ]
}
