neverallow {
    domain
    -storage_daemon
    -hap_domain
    -media_service
    -hdcd
} data_user_file:dir {
    create_dir_perms
    never_write_dir
};

neverallow {
    domain
    -storage_daemon
    -hap_domain
    -media_service
    -hdcd
} data_user_file:{ file lnk_file } {
    create_file_perms
    never_rw_file
};

neverallow {
    domain
    -storage_daemon
} data_user_file:file {
    never_execute_file
};

allow normal_hap hmdfs:dir create_dir_perms;
allow normal_hap hmdfs:{file lnk_file} create_file_perms;
allow hap_domain data_user_file:dir create_dir_perms;
allow hap_domain data_user_file:file create_file_perms;
allow normal_hap privacy_service:binder call;
allow hap_domain epfs:dir create_dir_perms;
allow hap_domain epfs:{file lnk_file} create_file_perms;
