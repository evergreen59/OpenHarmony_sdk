import("//build/test.gni")

ohos_unittest("tel_cellular_call_ims_test") {
  subsystem_name = "telephony"
  part_name = "cellular_call"
  test_module = "tel_cellular_call_ims_test"
  module_out_path = part_name + "/" + test_module

  sources = [
    "//base/telephony/call_manager/services/telephony_interaction/src/cellular_call_proxy.cpp",
    "ims_test.cpp",
  ]

  include_dirs = [
    "//base/telephony/cellular_call/interfaces/innerkits/ims",
    "//base/telephony/cellular_call/services/common/include",
    "//base/telephony/cellular_call/services/connection/include",
    "//base/telephony/cellular_call/services/control/include",
    "//base/telephony/cellular_call/services/manager/include",
    "//base/telephony/call_manager/interfaces/innerkits",
    "//base/telephony/call_manager/services/telephony_interaction/include",
  ]

  deps = [
    "//base/telephony/cellular_call:tel_cellular_call",
    "//base/telephony/core_service/interfaces/innerkits:tel_core_service_api",
    "//base/telephony/core_service/utils:libtel_common",
    "//third_party/googletest:gtest_main",
    "//third_party/libphonenumber/cpp:phonenumber_standard",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "c_utils:utils",
    "core_service:tel_core_service_api",
    "drivers_interface_ril:hril_innerkits",
    "eventhandler:libeventhandler",
    "init:libbegetutil",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
    "samgr:samgr_proxy",
  ]
  defines = [
    "TELEPHONY_LOG_TAG = \"CellularCallImsTest\"",
    "LOG_DOMAIN = 0xD000F00",
  ]
  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":tel_cellular_call_ims_test" ]
}
