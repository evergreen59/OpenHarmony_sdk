import("//build/test.gni")

##############################fuzztest##########################################
ohos_fuzztest("UpdateSimMessageFuzzTest") {
  module_output_path = "sms_mms/UpdateSimMessageFuzzTest"
  module_out_path = module_output_path
  fuzz_config_file =
      "//base/telephony/sms_mms/test/fuzztest/updatesimmessage_fuzzer"

  include_dirs = [
    "//base/telephony/core_service/frameworks/js/napi",
    "//base/telephony/core_service/interfaces/innerkits/include",
    "//base/telephony/core_service/interfaces/innerkits/ims/include",
    "//base/telephony/sms_mms/frameworks/js/napi/include",
    "//base/telephony/sms_mms/services/include",
    "//base/telephony/sms_mms/test/fuzztest/common_fuzzer",
    "//base/telephony/sms_mms/interfaces/innerkits/",
    "//base/telephony/sms_mms/interfaces/innerkits/ims",
    "//third_party/curl/include",
    "//foundation/communication/netmanager_base/services/netconnmanager/include",
  ]

  configs = [ "//base/telephony/core_service/utils:telephony_log_config" ]

  deps = [
    "//base/telephony/sms_mms:tel_sms_mms",
    "//base/telephony/sms_mms/frameworks/native:tel_sms_mms_api",
    "//foundation/ability/ability_runtime/frameworks/native/ability/native:data_ability_helper",
    "//foundation/ability/ability_runtime/interfaces/inner_api/ability_manager:ability_manager",
    "//foundation/arkui/napi:ace_napi",
    "//foundation/communication/netmanager_base/services/netconnmanager:net_conn_manager",
    "//third_party/curl:curl",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "eventhandler:libeventhandler",
    "ipc:ipc_core",
    "netmanager_base:net_conn_manager_if",
  ]
  defines += [
    "TELEPHONY_LOG_TAG = \"SmsMmsFuzzTest\"",
    "LOG_DOMAIN = 0xD000F00",
  ]
  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [
    "//base/telephony/sms_mms/test/fuzztest/common_fuzzer/addsmstoken_fuzzer.cpp",
    "updatesimmessage_fuzzer.cpp",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":UpdateSimMessageFuzzTest",
  ]
}
