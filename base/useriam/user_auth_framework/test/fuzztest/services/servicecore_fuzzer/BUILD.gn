import("//build/ohos.gni")
import("//build/test.gni")

ohos_fuzztest("ServiceCoreFuzzTest") {
  module_out_path = "useriam/user_auth_framework/services"
  fuzz_config_file = "//base/useriam/user_auth_framework/test/fuzztest/services/servicecore_fuzzer"

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  include_dirs = [
    "inc",
    "//base/useriam/user_auth_framework/interfaces/inner_api",
    "//base/useriam/user_auth_framework/frameworks/native/ipc/common_defines",
    "//base/useriam/user_auth_framework/services/base/inc",
    "//base/useriam/user_auth_framework/services/core/inc",
    "//base/useriam/user_auth_framework/services/core/src",
    "//base/useriam/user_auth_framework/common/utils",
    "//base/useriam/user_auth_framework/common/logs/co_auth/inc",
    "//base/useriam/user_auth_framework/common/logs",
  ]

  sources = [
    "src/resource_node_fuzzer.cpp",
    "src/resource_node_pool_fuzzer.cpp",
    "src/schedule_node_fuzzer.cpp",
    "src/service_core_fuzzer.cpp",
  ]

  deps = [
    "//base/useriam/user_auth_framework/common:iam_test",
    "//base/useriam/user_auth_framework/frameworks/native/common:attributes",
    "//base/useriam/user_auth_framework/services/core:userauth_service_core",
  ]

  remove_configs = [ "//build/config/compiler:no_exceptions" ]

  external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
}
