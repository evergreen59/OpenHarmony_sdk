    "distributeddatamgr_adapter/webdatabase/src/ohos_web_permission_data_base_adapter_impl.cpp",
    "inputmethodframework_adapter/src/imf_adapter_impl.cpp",
    "interfaces/ohos_adapter_helper.cpp",
