  public_configs = [ ":ohos_adapter_public_interface" ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:abilitykit_native",
    "ability_runtime:app_manager",
    "battery_manager:batterysrv_client",
    "c_utils:utils",
    "cellular_data:tel_cellular_data_api",
