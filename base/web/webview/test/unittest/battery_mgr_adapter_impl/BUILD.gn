import("//build/test.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs =
      [ "//base/web/webview/ohos_adapter/battery_mgr_adapter/include" ]
}

ohos_unittest("battery_mgr_adapter_test") {
  module_out_path = module_output_path

  sources = [ "battery_mgr_adapter_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "//base/web/webview/ohos_adapter:nweb_ohos_adapter",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "battery_manager:batterysrv_client",
    "common_event_service:cesfwk_innerkits",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":battery_mgr_adapter_test" ]
}
