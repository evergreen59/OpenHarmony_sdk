import("//build/test.gni")

module_output_path = "web/webview"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "//base/web/webview/interfaces/innerkits/ohos_nweb",
    "//foundation/window/window_manager/interfaces/innerkits/wm",
    "//base/web/webview/ohos_adapter/distributeddatamgr_adapter/webdatabase/include",
    "//third_party/googletest/googlemock/include",
    "//foundation/distributeddatamgr/relational_store/frameworks/native/rdb/include",
    "//third_party/sqlite/include",
  ]
}

ohos_unittest("data_base_adapter_test") {
  module_out_path = module_output_path

  sources = [ "web_data_base_adapter_impl_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "//base/web/webview/ohos_adapter:nweb_ohos_adapter",
    "//foundation/ability/ability_runtime/frameworks/native/appkit:app_context",
    "//foundation/graphic/graphic_2d:libsurface",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "ability_runtime:app_manager",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "relational_store:native_rdb",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":data_base_adapter_test" ]
}
