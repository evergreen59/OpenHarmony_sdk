import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/abilitymgr"

ohos_unittest("ability_running_info_test") {
  module_out_path = module_output_path

  include_dirs = [
    "${bundlefwk_inner_api_path}/appexecfwk_base/include",
    "${ability_runtime_services_path}/abilitymgr/include",
  ]

  sources = [
    "${ability_runtime_services_path}/abilitymgr/src/ability_running_info.cpp",
    "ability_running_info_test.cpp",
  ]

  deps = [ "//third_party/googletest:gtest_main" ]

  configs = [ "${ability_runtime_services_path}/common:common_config" ]

  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_base",
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":ability_running_info_test" ]
}
