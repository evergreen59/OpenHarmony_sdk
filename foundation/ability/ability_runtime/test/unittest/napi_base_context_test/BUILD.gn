import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

ohos_unittest("napi_base_context_test") {
  module_out_path = "ability_runtime/napi_base_context"

  sources = [ "napi_base_context_test.cpp" ]

  configs = [ "${ability_runtime_services_path}/common:common_config" ]

  cflags = []

  include_dirs = []

  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  deps = [
    "${ability_runtime_innerkits_path}/napi_base_context:napi_base_context",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "napi:ace_napi",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":napi_base_context_test" ]
}
