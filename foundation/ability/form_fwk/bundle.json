                    "form_provider_stub.h",
                    "form_render_stub.h",
                    "form_supply_interface.h",
                    "form_supply_stub.h",
                    "provider_connect_stub.h",
                    "form_constants.h",
                    "form_share_info.h"
                  ]
                },
                "name": "//foundation/ability/form_fwk:form_manager"
              },
              {
                "header": {
                  "header_base": "//foundation/ability/form_fwk/interfaces/kits/native/include",
