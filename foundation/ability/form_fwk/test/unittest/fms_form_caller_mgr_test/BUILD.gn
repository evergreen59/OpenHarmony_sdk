import("//build/test.gni")
import("//foundation/ability/form_fwk/form_fwk.gni")

config("form_mgr_test_config") {
  include_dirs = [
    "${form_fwk_path}/interfaces/kits/native/include",
    "${form_fwk_path}/test/mock/include",
  ]
}

# ohos_unittest is a template that will add gtest as deps.
ohos_unittest("form_caller_mgr_test") {
  module_out_path = "form_fwk/form_mgr"

  configs = [ ":form_mgr_test_config" ]

  sources = [
    "${form_fwk_path}/test/mock/src/mock_form_provider_client.cpp",
    "form_caller_mgr_test.cpp",
  ]

  deps = [
    "${form_fwk_path}:fmskit_native",
    "//third_party/googletest:gmock_main",
  ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:app_manager",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "form_fwk:form_manager",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":form_caller_mgr_test" ]
}
