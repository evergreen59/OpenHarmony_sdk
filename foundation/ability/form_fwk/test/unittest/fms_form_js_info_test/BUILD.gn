import("//build/test.gni")
import("//foundation/ability/form_fwk/form_fwk.gni")

module_output_path = "form_fwk/formmgrservice"

ohos_unittest("FmsFormJsInfoTest") {
  module_out_path = module_output_path

  sources = [
    "${form_fwk_path}/test/unittest/fms_form_js_info_test/fms_form_js_info_test.cpp",
    "${form_fwk_path}/test/unittest/fms_form_js_info_test/mock_form_provider_data.cpp",
  ]

  include_dirs = [
    "//third_party/json/include",
    "${ability_runtime_path}/services/formmgr/include",
    "${systemabilitymgr_path}/samgr/interfaces/innerkits/samgr_proxy/include",
    "${form_fwk_path}/interfaces/inner_api/include",
  ]

  configs = []
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${ability_runtime_path}/interfaces/inner_api/app_manager:app_manager",
    "${form_fwk_path}:fms_target",
  ]

  external_deps = [
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "form_fwk:form_manager",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]
}

###############################################################################
group("unittest") {
  testonly = true

  deps = [ ":FmsFormJsInfoTest" ]
}
