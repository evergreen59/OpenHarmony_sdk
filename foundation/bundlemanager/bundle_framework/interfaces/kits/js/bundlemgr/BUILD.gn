import("//build/ohos.gni")
import("../../../../appexecfwk.gni")

ohos_shared_library("bundle") {
  include_dirs = [
    "//foundation/bundlemanager/bundle_framework/interfaces/kits/js/common",
    "//third_party/node/src",
    "//third_party/libuv/include",
    "//utils/system/safwk/native/include",
    "${kits_path}/bundlemgr_graphics/include",
  ]
  defines = [
    "APP_LOG_TAG = \"BundleMgrService\"",
    "LOG_DOMAIN = 0xD001120",
  ]
  sources = [
    "bundle_death_recipient.cpp",
    "bundle_mgr.cpp",
    "cleancache_callback.cpp",
    "installer_callback.cpp",
    "native_module.cpp",
  ]

  deps = [
    "${common_path}:libappexecfwk_common",
    "../common:bundle_napi_common",
  ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:runtime",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "napi:ace_napi",
    "samgr:samgr_proxy",
  ]

  if (bundle_framework_graphics) {
    defines += [ "BUNDLE_FRAMEWORK_GRAPHICS" ]
    deps += [ "${kits_path}/bundlemgr_graphics:bundlemgr_graphics" ]
    external_deps += [ "multimedia_image_framework:image" ]
  }

  relative_install_dir = "module"
  subsystem_name = "bundlemanager"
  part_name = "bundle_framework"
}
