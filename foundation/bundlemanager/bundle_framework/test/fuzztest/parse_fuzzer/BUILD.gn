import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("../../../appexecfwk.gni")
module_output_path = "bundle_framework/fuzz"

##############################fuzztest##########################################
ohos_fuzztest("ParseFuzzTest") {
  module_out_path = module_output_path
  use_exceptions = true
  fuzz_config_file = "../../fuzztest/parse_fuzzer"

  include_dirs = [ "//utils/system/safwk/native/include" ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "parse_fuzzer.cpp" ]

  deps = [
    "${common_path}:libappexecfwk_common",
    "${services_path}/bundlemgr:bms_target",
    "${services_path}/bundlemgr:bundle_parser",
    "${services_path}/bundlemgr:parser_common",
  ]
  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_base",
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
  ]
}
