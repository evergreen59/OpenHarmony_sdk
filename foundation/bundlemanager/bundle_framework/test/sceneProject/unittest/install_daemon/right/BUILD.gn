import("//build/ohos.gni")
import("../../../../../appexecfwk.gni")

ohos_hap("right") {
  hap_profile = "./src/main/config.json"
  hap_name = "right"
  subsystem_name = "bundlemanager"
  final_hap_path = "$root_out_dir/tests/unittest/bundle_framework/bundlemgrservice/resource/install_daemon/${hap_name}.hap"
  testonly = true
  deps = [
    ":hjs_demo_js_assets",
    ":hjs_demo_resources",
  ]
  certificate_profile =
      "${appexecfwk_path}/test/sceneProject/signature/com.example.l3jsdemo.p7b"
}
ohos_js_assets("hjs_demo_js_assets") {
  source_dir = "./src/main/js/default"
}
ohos_resources("hjs_demo_resources") {
  sources = [ "./src/main/js/resources" ]
  hap_profile = "./src/main/config.json"
}
