import("//build/test.gni")
import("../../../../../appexecfwk.gni")
module_output_path = "bundle_framework/bundlemgrsst"

ohos_systemtest("BmsLauncherServiceSystemTest") {
  module_out_path = module_output_path

  configs = [ "//base/notification/eventhandler/frameworks/eventhandler:libeventhandler_config" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${appexecfwk_path}/test/sceneProject/systemtest/jsBundle/jsThirdBundle/bmsThirdBundle1:bmsThirdBundle1",
    "${appexecfwk_path}/test/sceneProject/systemtest/jsBundle/jsThirdBundle/bmsThirdBundle2:bmsThirdBundle2",
    "${appexecfwk_path}/test/sceneProject/systemtest/jsBundle/jsThirdBundle/bmsThirdBundle3:bmsThirdBundle3",
    "${appexecfwk_path}/test/sceneProject/systemtest/jsBundle/jsThirdBundle/bmsThirdBundle4:bmsThirdBundle4",
    "${appexecfwk_path}/test/sceneProject/systemtest/jsBundle/jsThirdBundle/bmsThirdBundle5:bmsThirdBundle5",
    "${appexecfwk_path}/test/sceneProject/systemtest/ohos_test:copy_ohos_test",
    "${common_path}:libappexecfwk_common",
    "${services_path}/test/moduletest/utils:tool_common",
    "//third_party/googletest:gtest_main",
  ]
  sources = [ "bms_launcher_service_system_test.cpp" ]

  defines = [ "APP_LOG_TAG = \"BundleMgrTool\"" ]

  external_deps = [
    "ability_base:want",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "common_event_service:cesfwk_innerkits",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
}

group("systemtest") {
  testonly = true

  deps = [ ":BmsLauncherServiceSystemTest" ]
}
