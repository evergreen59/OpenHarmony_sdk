    "net_conn_hievent_test.cpp",
    "net_conn_manager_test.cpp",
    "net_conn_service_iface_test.cpp",
    "net_conn_service_test.cpp",
    "net_detection_callback_test.cpp",
    "net_handle_test.cpp",
