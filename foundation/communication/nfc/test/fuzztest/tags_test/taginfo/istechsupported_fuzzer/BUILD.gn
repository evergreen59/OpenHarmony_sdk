import("//build/config/features.gni")
import("//build/test.gni")

ohos_fuzztest("IsTechSupportedFuzzTest") {
  module_out_path = "nfc/services"

  fuzz_config_file = "//foundation/communication/nfc/test/fuzztest/tags_test/taginfo/istechsupported_fuzzer"

  include_dirs = [
    "//foundation/communication/nfc/interfaces/inner_api/include",
    "//foundation/communication/nfc/interfaces/inner_api/include/tags",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "istechsupported_fuzzer.cpp" ]

  deps =
      [ "//foundation/communication/nfc/interfaces/inner_api:nfc_inner_kits" ]

  external_deps = [
    "ability_base:want",
    "c_utils:utils",
    "ipc:ipc_core",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":IsTechSupportedFuzzTest",
  ]
}
