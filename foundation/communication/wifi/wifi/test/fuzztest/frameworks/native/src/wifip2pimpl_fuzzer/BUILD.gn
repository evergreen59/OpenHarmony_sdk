import("//build/test.gni")
import("//foundation/communication/wifi/wifi/wifi.gni")
module_output_path = "wifi/wifi_sta"

##############################fuzztest##########################################
ohos_fuzztest("WifiP2pImplFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "$WIFI_ROOT_DIR/test/fuzztest/frameworks/native/src/wifip2pimpl_fuzzer"

  include_dirs = [
    "$WIFI_ROOT_DIR/frameworks/native/include",
    "$WIFI_ROOT_DIR/frameworks/native/interfaces",
    "$WIFI_ROOT_DIR/services/wifi_standard/wifi_framework/wifi_toolkit/net_helper",
    "$WIFI_ROOT_DIR/test/fuzztest/fuzz_common_func",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "wifip2pimpl_fuzzer.cpp" ]

  deps = [ "$WIFI_ROOT_DIR/frameworks/native:wifi_sdk" ]

  external_deps = [
    "c_utils:utils",
    "ipc:ipc_core",
  ]

  part_name = "wifi"
  subsystem_name = "communication"
}
