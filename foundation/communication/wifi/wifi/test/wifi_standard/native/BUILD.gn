import("//build/test.gni")
import("//foundation/communication/wifi/wifi/wifi.gni")
module_output_path = "wifi/native_test"

config("module_private_config") {
  visibility = [ ":*" ]
  include_dirs = [
    "//commonlibrary/c_utils/base/include",
    "$WIFI_ROOT_DIR/test/wifi_standard/native",
  ]
}

ohos_unittest("native_unittest") {
  module_out_path = module_output_path
  sources = [
    "wifi_c_device_test.cpp",
    "wifi_c_event_test.cpp",
    "wifi_c_hid2d_test.cpp",
    "wifi_c_hotspot_test.cpp",
    "wifi_c_p2p_test.cpp",
    "wifi_c_utils_test.cpp",
  ]

  include_dirs = [
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "$WIFI_ROOT_DIR/frameworks/native/include",
    "$WIFI_ROOT_DIR/frameworks/native/interfaces",
    "$WIFI_ROOT_DIR/frameworks/interfaces/kits/c",
    "$WIFI_ROOT_DIR/services/wifi_standard/wifi_framework/wifi_toolkit/net_helper",
    "$WIFI_ROOT_DIR/services/wifi_standard/wifi_framework/wifi_toolkit/log/",
    "//third_party/googletest/googlemock/include",
    "//third_party/googletest/googletest/include",
    "$WIFI_ROOT_DIR/utils/inc",
  ]

  deps = [
    "$WIFI_ROOT_DIR/frameworks/native:wifi_sdk",
    "$WIFI_ROOT_DIR/utils:wifi_utils",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "c_utils:utils",
    "ipc:ipc_core",
  ]

  part_name = "wifi"
  subsystem_name = "communication"
}

group("unittest") {
  testonly = true
  deps = [ ":native_unittest" ]
}
