import("//build/ohos.gni")
import("//build/ohos/ace/ace.gni")

js_declaration("camera_js") {
  part_name = "multimedia_camera_framework"
  sources = [ "./@ohos.multimedia.camera.d.ts" ]
}

ohos_copy("camera_declaration") {
  sources = [ "./@ohos.multimedia.camera.d.ts" ]
