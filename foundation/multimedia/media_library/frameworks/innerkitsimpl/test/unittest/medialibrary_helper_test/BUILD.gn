import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":media_library_helper_test" ]
}

ohos_unittest("media_library_helper_test") {
  module_out_path = "media_library/media_library_helper"

  include_dirs = [
    "./include",
    "${MEDIA_LIB_BASE_DIR}/interfaces/inner_api/media_library_helper/include",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/media_library_helper/include",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension/include",
    "${MEDIA_LIB_BASE_DIR}/frameworks/utils/include",
  ]

  sources = [
    "./src/album_asset_test.cpp",
    "./src/dir_asset_test.cpp",
    "./src/fetch_result_test.cpp",
    "./src/file_asset_test.cpp",
    "./src/media_file_utils_test.cpp",
    "./src/native_album_asset_test.cpp",
    "./src/smart_album_asset_test.cpp",
  ]

  deps = [
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/media_library_helper:media_library",
    "${MEDIA_LIB_BASE_DIR}/frameworks/innerkitsimpl/medialibrary_data_extension:medialibrary_data_extension",
    "${MEDIA_LIB_BASE_DIR}/interfaces/kits/js:medialibrary",
  ]

  external_deps = [
    "data_share:datashare_common",
    "data_share:datashare_consumer",
    "multimedia_image_framework:image_native",
    "relational_store:native_rdb",
    "relational_store:rdb_data_share_adapter",
  ]

  resource_config_file =
      "${MEDIA_LIB_INNERKITS_DIR}/test/unittest/resources/ohos_test.xml"
}
