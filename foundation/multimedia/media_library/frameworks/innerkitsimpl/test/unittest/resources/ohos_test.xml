<configuration ver="2.0">
    <target name="medialibrary_datashare_unittest">
        <preparer>
            <option name="shell" value="rm -rf /storage/media/100/local/files/*"/>
            <option name="shell" value="rm -rf /storage/media/100/local/files/.*"/>
            <option name="shell" value="setenforce 0"/>
        </preparer>
    </target>
    <target name="media_library_helper_test">
        <cleaner>
            <option name="shell" value="rm -rf /data/test/*"/>
            <option name="shell" value="rm -rf /data/test/.*"/>
        </cleaner>
    </target>
    <target name="medialibrary_extability_unittest">
        <preparer>
            <option name="shell" value="rm -rf /storage/media/100/local/files/*"/>
            <option name="shell" value="rm -rf /storage/media/100/local/files/.*"/>
            <option name="shell" value="setenforce 0"/>
        </preparer>
    </target>
    <target name="mediathumbnail_test">
        <preparer>
            <option name="shell" value="rm -rf /storage/media/100/local/files/*"/>
            <option name="shell" value="rm -rf /storage/media/100/local/files/.*"/>
            <option name="shell" value="scanner"/>
            <option name="shell" value="sleep 10"/>
            <option name="shell" value="mkdir /storage/media/100/local/files/Pictures"/>
            <option name="shell" value="mkdir /storage/media/100/local/files/Videos"/>
            <option name="shell" value="mkdir /storage/media/100/local/files/Audios"/>
            <option name="push" value="thumbnail_testfile/CreateImageThumbnailTest_001.jpg -> /storage/media/100/local/files/Pictures" src="res"/>
            <option name="push" value="thumbnail_testfile/CreateImageLcdTest_001.jpg -> /storage/media/100/local/files/Pictures" src="res"/>
            <option name="push" value="thumbnail_testfile/CreateAudioThumbnailTest_001.mp3 -> /storage/media/100/local/files/Audios" src="res"/>
            <option name="push" value="thumbnail_testfile/CreateVideoThumbnailTest_001.mp4 -> /storage/media/100/local/files/Videos" src="res"/>
            <option name="shell" value="scanner"/>
            <option name="shell" value="sleep 10"/>
        </preparer>
    </target>
    <target name="mediascanner_unittest">
        <preparer>
            <option name="shell" value="rm -rf /storage/media/100/local/files/*"/>
            <option name="shell" value="rm -rf /storage/media/100/local/files/.*"/>
            <option name="shell" value="setenforce 0"/>
        </preparer>
    </target>
</configuration>