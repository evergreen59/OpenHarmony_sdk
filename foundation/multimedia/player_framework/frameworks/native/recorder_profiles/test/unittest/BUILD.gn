import("//build/test.gni")
import("//foundation/multimedia/player_framework/config.gni")

module_output_path = "multimedia_player_framework/recorder_profiles"

ohos_unittest("recorder_profiles_unit_test") {
  module_out_path = module_output_path
  include_dirs = [
    "./",
    "//foundation/multimedia/player_framework/interfaces/inner_api/native",
    "//foundation/multimedia/player_framework/frameworks/native/recorder_profiles",
  ]

  cflags = [
    "-std=c++17",
    "-fno-rtti",
    "-fno-exceptions",
    "-Wall",
    "-fno-common",
    "-fstack-protector-strong",
    "-Wshadow",
    "-FPIC",
    "-FS",
    "-O2",
    "-D_FORTIFY_SOURCE=2",
    "-fvisibility=hidden",
    "-Wformat=2",
    "-Wdate-time",
    "-Werror",
    "-Wextra",
    "-Wimplicit-fallthrough",
    "-Wsign-compare",
    "-Wunused-parameter",
  ]

  if (multimedia_player_framework_support_recorder) {
    sources = [ "recorder_profiles_unit_test.cpp" ]
  }

  deps = [ "//foundation/multimedia/player_framework/interfaces/inner_api/native:media_client" ]
}

group("unittest") {
  testonly = true

  deps = [ ":recorder_profiles_unit_test" ]
}
