import("//build/ohos.gni")
import("//foundation/multimedia/player_framework/config.gni")
MEDIA_ROOT_DIR = "//foundation/multimedia/player_framework"

group("media_unit_test") {
  testonly = true
  deps = []
  if (multimedia_player_framework_support_test) {
    deps += [
      "$MEDIA_ROOT_DIR/frameworks/native/avmetadatahelper/test/unittest:avmetadata_unit_test",
      "$MEDIA_ROOT_DIR/frameworks/native/player/test/unittest:player_unit_test",
      "$MEDIA_ROOT_DIR/frameworks/native/recorder/test/unittest:recorder_unit_test",
      "$MEDIA_ROOT_DIR/frameworks/native/recorder_profiles/test/unittest:recorder_profiles_unit_test",
      "unittest/avcodec_test:acodec_capi_unit_test",
      "unittest/avcodec_test:acodec_native_unit_test",
      "unittest/avcodec_test:avcodec_list_native_unit_test",
      "unittest/avcodec_test:format_capi_unit_test",
      "unittest/avcodec_test:format_native_unit_test",
      "unittest/avcodec_test:vcodec_capi_unit_test",
      "unittest/avcodec_test:vcodec_native_unit_test",
    ]
  }
}

group("media_fuzz_test") {
  testonly = true
  deps = []
  if (multimedia_player_framework_support_test) {
    deps += [ "fuzztest:fuzztest" ]
  }
}

group("media_demo_test") {
  testonly = true
  deps = []
  if (multimedia_player_framework_support_test) {
    deps += [ "nativedemo:media_demo" ]
  }
}
