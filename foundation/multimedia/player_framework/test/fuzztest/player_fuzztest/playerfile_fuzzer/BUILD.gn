#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/multimedia/player_framework/config.gni")
module_output_path = "player_framework/media_player"
MEDIA_ROOT_DIR = "//foundation/multimedia/player_framework/"

##############################fuzztest##########################################
ohos_fuzztest("PlayerFileFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "$MEDIA_ROOT_DIR/test/fuzztest/player_fuzztest/playerfile_fuzzer"
  resource_config_file = "$MEDIA_ROOT_DIR/test/fuzztest/resource/ohos_test.xml"

  include_dirs = [
    "$MEDIA_ROOT_DIR/interfaces/inner_api/native",
    "$MEDIA_ROOT_DIR/services/utils/include",
    "//graphic/graphic_2d/interfaces/innerkits/surface",
    "//foundation/window/window_manager/interfaces/innerkits/wm",
    "$MEDIA_ROOT_DIR/test/fuzztest/common/",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  if (multimedia_player_framework_support_player) {
    sources = [
      "$MEDIA_ROOT_DIR/test/fuzztest/common/test_player.cpp",
      "playerfile_fuzzer.cpp",
    ]
  }
  deps = [
    "//foundation/graphic/graphic_2d:libsurface",
    "//foundation/graphic/graphic_2d/frameworks/surface:surface",
    "//foundation/graphic/graphic_2d/rosen/modules/render_service_client:librender_service_client",
    "//foundation/window/window_manager/wm:libwm",
  ]
  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "multimedia_player_framework:media_client",
  ]
}

