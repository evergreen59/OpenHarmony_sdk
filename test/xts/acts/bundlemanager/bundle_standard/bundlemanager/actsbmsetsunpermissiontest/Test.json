{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "120000",
        "bundle-name": "com.example.actsbmsetsunpermissiontest",
        "package-name": "com.example.actsbmsetsunpermissiontest",
        "shell-timeout": "120000"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsBmsEtsUnPermissionTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "bmsJstest1.hap->/data/test/bmsJstest1.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/test/*.hap",
                "bm install -p /data/test/bmsJstest1.hap"
            ],
            "teardown-command":[
                "bm uninstall -n com.example.myapplication1"
            ]
        }
    ]
}
