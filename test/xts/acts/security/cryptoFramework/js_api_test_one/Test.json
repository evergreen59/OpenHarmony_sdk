{
  "description": "Configuration for hjunit demo Tests",
  "driver": {
    "type": "OHJSUnitTest",
    "test-timeout": "900000",
    "shell-timeout": "900000",
    "testcase-timeout": "180000",
    "bundle-name": "com.openharmony.cryptoFramework1",
    "package-name": "com.openharmony.cryptoFramework1"
  },
  "kits": [
    {
      "test-file-name": ["ActsCryptoFrameworkJSNormalTest.hap"],
      "type": "AppInstallKit",
      "cleanup-apps": true
    },
    {
      "type": "ShellKit",
      "run-command": ["remount", "mkdir /data/local/tmp/xts-test"]
    },
    {
      "type": "PushKit",
      "push": [
        "ActsCryptoFrameworkJSNormalTest.hap->/data/local/tmp/xts-test/ActsCryptoFrameworkJSNormalTest.hap"
      ]
    },
    {
      "type": "ShellKit",
      "run-command": ["chmod 777 -R /data/local/tmp"]
    }
  ]
}
