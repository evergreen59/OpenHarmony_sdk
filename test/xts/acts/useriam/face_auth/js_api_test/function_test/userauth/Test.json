{
    "description": "Configuration for hjunit demo Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "600000",
        "shell-timeout": "600000",
        "bundle-name": "com.example.myapplication101",
        "package-name": "com.example.myapplication101"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsUserauthTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/local/tmp/xts-test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsUserauthTest.hap->/data/local/tmp/xts-test/ActsUserauthTest.hap"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 777 -R /data/local/tmp"
            ]
        }
    ]
}