    external_deps = [ "hilog:libhilog" ]
  }

  external_deps += [
    "init:libbegetutil",
    "ipc:ipc_single",
    "samgr:samgr_proxy",
  ]

  public_configs = [ ":cameraTest_config" ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_camera"
}
