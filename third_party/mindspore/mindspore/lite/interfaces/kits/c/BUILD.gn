import("//build/ohos.gni")

ohos_ndk_headers("mindspore_header") {
  dest_dir = "$ndk_headers_out_dir/mindspore"
  sources = [
    "../../../../../include/sdk_api/context.h",
    "../../../../../include/sdk_api/data_type.h",
    "../../../../../include/sdk_api/format.h",
