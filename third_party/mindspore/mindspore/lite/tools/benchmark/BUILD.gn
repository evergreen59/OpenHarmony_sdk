import("//build/ohos.gni")

ohos_executable("benchmark_bin") {
  sources = [
    "../../../ccsrc/backend/kernel_compiler/cpu/nnacl/nnacl_common.c",
    "../../src/common/file_utils.cc",
    "../../src/common/utils.cc",
    "../common/flag_parser.cc",
    "../common/string_util.cc",
    "benchmark.cc",
    "benchmark_base.cc",
    "benchmark_c_api.cc",
    "benchmark_unified_api.cc",
    "main.cc",
    "run_benchmark.cc",
  ]

  include_dirs = [
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//third_party/flatbuffers/include",
    "../../",
    "../../../core/",
    "../../../../",
    "../../../../third_party/",
    "../../../ccsrc/backend/kernel_compiler/cpu/",
  ]

  defines = [
    "BENCHMARK_CLIP_JSON",
    "MS_COMPILE_OHOS",
  ]

  if (target_cpu == "arm") {
    defines += [
      "ENABLE_ARM",
      "ENABLE_ARM32",
    ]
  } else if (target_cpu == "arm64") {
    defines += [
      "ENABLE_ARM",
      "ENABLE_ARM64",
    ]
  }
  disable_android = true
  if (disable_android) {
    cflags = [
      "-UANDROID",
      "-U__ANDROID__",
      "-U__ANDROID_API__",
    ]
    cflags_cc = [
      "-UANDROID",
      "-U__ANDROID__",
      "-U__ANDROID_API__",
    ]
  }
  remove_configs = [ "//build/config/compiler:no_rtti" ]

  deps = [ "../../:mindspore_lib" ]

  output_name = "benchmark_bin"
  install_enable = true
  part_name = "mindspore"
}
